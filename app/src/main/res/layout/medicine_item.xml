<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_margin="@dimen/dp_10"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/butterfly_image"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_gravity="center_vertical|start"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/med_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout"
                app:max_select="-1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5">
            </com.zhy.view.flowlayout.TagFlowLayout>

            <!--<com.github.hymanme.tagflowlayout.TagFlowLayout
                android:id="@+id/tag_pre_flow_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tagsHorizontalSpace="1dp"
                app:backGroundColor="@android:color/transparent"
                />-->
            <!--
            app:minVisibleHeight="100dp"
            app:expandHint="查看更多"
            app:foldHint="点击缩回"
            -->

        </LinearLayout>

        <TextView
            android:id="@+id/med_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="12dp"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/med_desc_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_5"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/ic_border_circle_checked"
            android:textColor="@color/gray"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/ic_border_circle_checked"/>

        <!--<com.github.hymanme.tagflowlayout.TagFlowLayout-->
            <!--android:id="@+id/tag_pre_flow_layout"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:tagsHorizontalSpace="1dp"-->
            <!--app:backGroundColor="@android:color/transparent"-->
            <!--/>-->
    </LinearLayout>

</LinearLayout>