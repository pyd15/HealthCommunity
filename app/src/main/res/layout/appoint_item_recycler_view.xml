<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white_alpha"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">
    <!--android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
    android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginTop="@dimen/card_margin_vertical_big_activity"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hos_img"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginRight="@dimen/text_margin"
            android:backgroundTint="@color/gray_light"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_appointr"
            />
        <!--android:transitionName="shareView"-->

        <TextView
            android:id="@+id/hos_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hos_img"
            android:layout_marginTop="@dimen/dp_3"
            android:text="@string/tv_recycler_item_1"
            android:textSize="17sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/big_depart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hos_name"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:layout_toRightOf="@id/hos_img"
            android:textSize="14sp"
            android:textColor="@color/grey_primary"
            android:text="科目："/>

        <TextView
            android:id="@+id/depart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/big_depart_name"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:layout_toRightOf="@id/hos_img"
            android:textSize="12sp"
            android:text="科室名称:"
            />

        <TextView
            android:id="@+id/appoint_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/depart_name"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:layout_toRightOf="@id/hos_img"
            android:textSize="12sp"
            android:text="预约时间:"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>